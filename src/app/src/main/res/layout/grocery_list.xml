<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Add"/>

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/day_spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Day"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/month_spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Month"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/getListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_list" />
    </LinearLayout>

    <Button
        android:id="@+id/glistbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="@string/Google_Vision"
        app:layout_anchor="@+id/drawer_layout"
        app:layout_anchorGravity="right|center"
        app:rippleColor="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</LinearLayout>