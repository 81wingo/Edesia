<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <ImageView
        android:id="@+id/lbl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center" />


    <TextView
        android:id="@+id/lbl_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_image"
        android:padding="16dp"
        tools:text="Recipe Title" />

    <View
        android:id="@+id/div_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/lbl_Ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Title"
        android:padding="16dp"
        tools:text="Recipe Ingredients" />
    <TextView
        android:id="@+id/lbl_Instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Ingredients"
        android:padding="16dp"
        tools:text="Recipe Instructions" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_create_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"

        android:layout_marginRight="16dp"

        android:layout_marginBottom="64dp"
        android:src="@drawable/ic_add_black_24dp" />
</RelativeLayout>
